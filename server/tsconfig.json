{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "build",
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "build",
    "node_modules"
  ],
}